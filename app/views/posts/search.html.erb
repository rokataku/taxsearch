<%= form_with(url: search_posts_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "論点検索", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>
<%= search_form_for @p, url: genre_search_posts_path do |f| %>
  <%= f.label :title_eq, '検索項目' %>
  <%= f.collection_select :title_eq, @post_title, :title, :title,  include_blank: '指定なし' %>
  <br>
  <%= f.submit '検索' %>
<% end %>

<div class="contents row">
  <% @posts.each do |post| %>
    <%= render partial: "post", locals: { post: post } %>
  <% end %>
</div>