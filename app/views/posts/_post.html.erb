<div class="content_post" style="background-image: url(<%= post.url %>);">
  <div class="more">
    <span><%= image_tag 'arrow_top.png' %></span>
    <ul class="more_list">
      <li>
        <%= link_to '詳細', post_path(post.id), method: :get %>
      </li>
      <% if user_signed_in? && current_user.id == post.user_id %>
        <li>
          <%= link_to '編集', edit_post_path(post.id), method: :get %>
        </li>
        <li>
          <%= link_to '削除', post_path(post.id), method: :delete %>
        </li>
      <% end %>
    </ul>
  </div>
    <p><%= post.title %></p>
    <span class="name">
    <a href="">
      <span>投稿者</span><%= post.user.name %>
      <span>ジャンル</span><%= post.genre.name %>
    </a>
    </span>
    <span class="date">
    <a>
      <span>投稿日時：</span><%= post.created_at %>
    </a>
    </span>
  <ul class="tag">
    <li class="tag-list">
      <%post.tags.each do |tag| %>
        #<%=tag.name%>
      <%end%>
    </li>
  </ul>
</div>
